@model IEnumerable<First_MVC.Models.LogProject>

<!DOCTYPE html>
<html>
<head>
    <title>Show Project History</title>
    <link href="~/css/Login.css" rel="stylesheet" />
    <style>
        * {
            font-family: 'Cambria Math';
        }

        #NamingTheTask {
            margin-left: 231px;
            margin-top: -651px;
            /* border: 2px solid black; */
            padding: 20px;
            text-align: center;
            background-color: darkgrey;
            font-family: 'Cambria Math';
        }

        #ListData {
            margin-left: 231px;
            margin-top: -23px;
        }

        #projectHistory {
            background-color: powderblue;
            margin-left: 232px;
            margin-top: -22px;
            padding: 8px;
            font-size: large;
            /* width: 425px; */
            display: flex;
            text-align: center;
            flex-direction: column-reverse;
            flex-wrap: wrap;
            align-items: stretch;
            align-content: stretch;
            justify-content: space-evenly;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div id="dashboardMsgs"><h1 id="wlcmMsg">Welcome Admin</h1></div>
    <div id="sidebar">
        <a id="anchor" href="@Url.Action("Admin", "LogIn")">Home</a>
        <a id="anchor" href="@Url.Action("Index","Home")">Log Out</a> <br /><br />
        <p id="project" class="dropdown">Project History►</p><br />
    </div><br />
    <div id="NamingTheTask"><h1 id="wlcmMsg">Project History</h1></div><br />

    <div id="projectHistory">
        <table border="2">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    @*<th>Action</th>*@
                    <th>Project Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.TimeStamp.ToString("MM/dd/yyyy hh:mm:ss tt")</td>
                        @*<td>@record.Action</td>*@
                        <td>@record.content</td>
                        @*<td>@(record.EmployeeID.HasValue ? record.EmployeeID.ToString() : "")</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*<p>@Html.ActionLink("View Text File", "ShowTextFile", "TextFile", new { fileName = "mvcLog.txt" }, null)</p>*@
    @*<p><a href="@Url.Action("ShowTextFile","TextFile")">Click Here</a></p>*@
</body>
</html>
