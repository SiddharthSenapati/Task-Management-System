<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change_Password</title>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div id="parent">
        <div id="container">
            @using (Html.BeginForm("PostByString", "Home", FormMethod.Post))
            {
                @*@Html.Hidden("UID");*@
                <h1 class="h1">Change Password</h1>
                <label class="label">New Password: </label> <br />
                <input type="password" class="textbox" name="newPwd" id="np" /> <br />
                <label class="label">Confirm Password: </label> <br />
                <input type="text" class="textbox" name="newCpwd" id="cnp" /> <br />
                <input type="submit" id="btnsubmit" value="Submit" />
            }
            @if (ViewBag.Message != null)
            {
                @ViewBag.Message;
            }




        </div>

    </div>
    

</body>
</html>
